@model WebApp.ViewModels.MoodsInPlaylistViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Base.Resources.Common.Edit</h1>

<h4>@Base.Resources.Header.MoodsInPlaylists</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All " class="text-danger"></div>
            <input type="hidden" asp-for="MoodsInPlaylist.Id" />
            
            <div class="form-group">
                <label asp-for="MoodsInPlaylist.PlaylistId" class="control-label"></label>
                <select asp-for="MoodsInPlaylist.PlaylistId" class ="form-control" asp-items="Model.PlaylistsList"></select>
                <span asp-validation-for="MoodsInPlaylist.PlaylistId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="MoodsInPlaylist.MoodId" class="control-label"></label>
                <select asp-for="MoodsInPlaylist.MoodId" class ="form-control" asp-items="Model.MoodsList"></select>
                <span asp-validation-for="MoodsInPlaylist.MoodId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
