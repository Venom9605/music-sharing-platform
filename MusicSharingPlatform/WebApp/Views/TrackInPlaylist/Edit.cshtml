@model WebApp.ViewModels.TrackInPlaylistViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Base.Resources.Common.Edit</h1>

<h4>@Base.Resources.Header.TracksInPlaylists</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All " class="text-danger"></div>
            <input type="hidden" asp-for="TrackInPlaylist.Id" />
            
            <div class="form-group">
                <label asp-for="TrackInPlaylist.PlaylistId" class="control-label"></label>
                <select asp-for="TrackInPlaylist.PlaylistId" class="form-control" asp-items="Model.PlaylistsList"></select>
                <span asp-validation-for="TrackInPlaylist.PlaylistId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="TrackInPlaylist.TrackId" class="control-label"></label>
                <select asp-for="TrackInPlaylist.TrackId" class="form-control" asp-items="Model.TracksList"></select>
                <span asp-validation-for="TrackInPlaylist.TrackId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
