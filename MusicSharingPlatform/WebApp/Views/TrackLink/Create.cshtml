@model WebApp.ViewModels.TrackLinkViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TrackLink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All " class="text-danger"></div>
            
